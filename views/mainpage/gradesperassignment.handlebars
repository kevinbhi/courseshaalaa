

<div class="container p-3 m-3">
    <input type="hidden" value="{{coursename}}" id="coursename">
    <input type="hidden" value="{{assignment_id}}" id="assignment_id">
    <table id="example" class="table table-dark table-striped" style="width:100%">
    
        <thead>
            <tr>
                <th> Students </th>
                <th> Grades </th>
                <th> Download Submissions </th>
                <th> Post Grades</th>
            </tr>
        </thead>
        <tbody>
            
            {{#each assignments}}
                <tr>
                    <input type="hidden" value="{{assignment_id}}" id="ass_{{this.studentusername}}">
                    {{!-- <td> <input type="hidden" value="{{this.studentusername}}" id="{{this.studentusername}}"></td> --}}
                    <td> {{this.studentusername}}</td>
                    <td><input type="number"  class="form-control w-25" value="{{this.grade}}" id="grade_{{this.studentusername}}"></td>
                    <td> <a href="{{this.path}}" class="btn btn-success"> Download </button></td>
                    <td> <button class="btn btn-primary buttonclick" id="update_{{this.studentusername}}" > Update </td>
                </tr>
            {{/each}}
        </tbody>
    
    </table>
        <div class="row" style="display: flex; justify-content: center;">
            <button class="btn btn-danger w-25" id="postgrades"> Post Grades </button>
        </div>
</div>

